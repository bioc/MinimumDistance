\examples{
	##Object was created by
	path <- "/thumper/ctsa/beaty/illumina610/Raw_Data/Released_Data/RELEASED_IDATS"
	samplesheet <- read.csv(file.path(path, "Beaty_610Q_release_Samples\ Table.csv"), 
				as.is=TRUE, header=TRUE)
	##create sampleNames that are paste the Sentrix.ID and Sentrix.Position columns
	samplesheet$sampleNames <- rownames(samplesheet) <- paste(samplesheet[, "Human610.Quadv1_B.Sentrix.ID"], samplesheet[, "Human610.Quadv1_B.Sentrix.Position"], sep="_")

	fns <- list()
	fns.complete <- list()
	sns <- samplesheet[, "sampleNames"]
	for(i in 1:nrow(samplesheet)){
		tmp <- list.files(file.path(path, samplesheet[i, 17]))
		fns.complete[[i]] <- list.files(file.path(path, samplesheet[i, 17]), full.names=TRUE)
		tmp <- sapply(tmp, function(x) strsplit(x, "_[GR][re]")[[1]][[1]])
		tmp <- tmp[tmp %in% sns]
		fns[[i]] <- tmp
	}
	fns <- unique(unlist(fns))	 ##length 7599
	fns.complete <- unique(unlist(fns.complete))   ##length 15,198
	tmp <- unique(sapply(fns.complete, function(x) strsplit(x, "_[GR][re]")[[1]][[1]]))
	##put the complete path in the same order as the samplesheet
	tmp <- tmp[match(rownames(samplesheet), basename(tmp))]
	all.equal(rownames(samplesheet), basename(tmp))
	samplesheet$filenames <- tmp
	
	\dontrun{
		save(samplesheet, file="~/projects/Beaty/data/samplesheet.rda")
	}

	##To load data
	data(samplesheet, package="Beaty")
}
\keyword{datasets}
